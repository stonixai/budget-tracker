{
  "name": "tutorial",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --port 3001",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --coverage --ui",
    "test:coverage:check": "node scripts/check-coverage.js",
    "test:coverage:validate": "npm run test:coverage && npm run test:coverage:check",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:performance": "playwright test --grep=@performance",
    "test:security": "playwright test --grep=@security",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run test:coverage:validate && npm run test:e2e",
    "test:report": "node scripts/generate-test-report.js",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build:analyze": "ANALYZE=true npm run build",
    "pretest": "npm run type-check",
    "postinstall": "playwright install --with-deps"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.10.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "drizzle-orm": "^0.44.4",
    "next": "15.4.6",
    "next-auth": "^5.0.0-beta.29",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "zod": "^4.0.16"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.46.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^2.1.6",
    "@vitest/ui": "^2.1.6",
    "audit-ci": "^7.1.0",
    "c8": "^10.1.2",
    "drizzle-kit": "^0.31.4",
    "happy-dom": "^15.11.6",
    "jsdom": "^25.0.1",
    "msw": "^2.6.4",
    "playwright": "^1.46.1",
    "prettier": "^3.3.3",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^2.1.6"
  }
}
